@model ShoppingCart.BackOffice.ViewsModels.Workflow.SampleViewModel
@{
    ViewBag.Title = "CartPositionAndPossibilities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    var state_choice = "";
</script>

<h2>All carts</h2>

@foreach (var c in Model.boxes)
{
<div class="panel panel-default col-md-6">
    <div class="panel-heading">
        <span class="badge">#@c.Cart.Id.ToString().Substring(0, 8)</span>
        <span class="glyphicon glyphicon-user"></span> @c.Cart.UserId.ToString().Substring(0, 8)
        <span class="glyphicon glyphicon-calendar"></span>
        @if (@c.Cart.DateCreated != null)
        {
            @c.Cart.DateCreated.ToString();
        }
    </div>
    <div class="panel-body">
        <h2>Products: </h2>
        <div>
            <a href="/BackOfficeWorkflow/OneCartMove?id=@c.Cart.Id" class="btn btn-info" role="button">View Detail</a>
        </div>
    </div>
</div>
}