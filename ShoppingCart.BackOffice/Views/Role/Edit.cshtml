@using ShoppingCart.Models.Models.User
@model ShoppingCart.BackOffice.ViewsModels.RoleEditModel
@{ 
    ViewBag.Title = "Edit Role";
}

<h2>Editing @Model.Role.Name Role</h2>
<h4>@Model.Role.Description</h4>

@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <input type="hidden" name="roleName" value="@Model.Role.Name" />

    <div class="panel panel-warning">
        <div class="panel-heading">Add To @Model.Role.Name</div>
        <table class="table">
            @if (Model.NonMembers.Count() == 0)
            {
                <tr><td colspan="2">All Users Are Members</td></tr>
            }
            else {
                <tr><td><strong>UserName</strong></td><td><strong>Add To Role</strong></td></tr>
                foreach (ApplicationUser user in Model.NonMembers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@user.Id">
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="panel panel-warning">
        <div class="panel-heading">Remove from @Model.Role.Name</div>
        <table class="table">
            @if (Model.Members.Count() == 0)
            {
                <tr><td colspan="2">No Users Are Members</td></tr>
            }
            else {
                <tr><td><strong>UserName</strong></td><td><strong>Remove From Role</strong></td></tr>
                foreach (ApplicationUser user in Model.Members)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@user.Id">
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}
