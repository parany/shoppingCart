@model MvcSiteMapProvider.Web.Html.Models.MenuHelperModel
@using System.Web.Mvc.Html
@using MvcSiteMapProvider.Web.Html.Models
<style>
    .dropdown-menu.navbar-inverse li ul li{
        list-style-type: none;
        margin:5px 0;
    }
    .dropdown-menu.navbar-inverse li ul li:hover a {
        color: cornflowerblue;
    }
    .dropdown-menu.navbar-inverse li ul li a{
        color: white;
        text-decoration: none;
    }
</style>
<ul class="nav navbar-nav">
    @foreach (var node in Model.Nodes)
    {

        if (node.Children.Any())
        {
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Html.DisplayFor(m => node)<span class="caret"></span></a>
                <ul class="dropdown-menu navbar-inverse">
                    <li >@Html.DisplayFor(m => node.Children)</li>
                </ul>
            </li>
        }
        else
        {
            <li>
                @Html.DisplayFor(m => node)
            </li>
        }
    }
</ul>