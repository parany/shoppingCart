<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ShoppingCart", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color: #ffffff;background-color:transparent;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Stock <span class="caret"></span></a>
                        <ul class="dropdown-menu navbar-inverse">
                            <li>@Html.ActionLink("Products", "Index", "Product", null, new { @style = "color:white" })</li>
                            <li>@Html.ActionLink("Categories", "Index", "Categories", null, new { @style = "color:white" })</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Carts", "Index", "Cart")</li>
                    <li>@Html.ActionLink("Providers", "Index", "Providers")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Membership <span class="caret"></span></a>
                        <ul class="dropdown-menu navbar-inverse">
                            <li>@Html.ActionLink("Users", "Index", "User", null, new { @style = "color:white" })</li>
                            <li>@Html.ActionLink("Roles", "Index", "Role", null, new { @style = "color:white" })</li>
                        </ul>
                    </li>
                    @*@Html.MvcSiteMap().Menu()*@
                 </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container">
        <ol class="breadcrumb">
            @Html.MvcSiteMap().SiteMapPath()
        </ol>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
