@model IEnumerable<ShoppingCart.BackOffice.ViewsModels.EditUserViewModel>

@{
    ViewBag.Title = "Users List";
}

<h2>List of Users in the system</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserName }, new { @class = "btn btn-warning btn-xs" }) 
                @Html.ActionLink("Groups", "UserGroups", new { id = item.UserName }, new { @class = "btn btn-success btn-xs" }) 
                @Html.ActionLink("Effective Permissions", "UserPermissions", new { id = item.UserName }, new { @class = "btn btn-info btn-xs" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.UserName }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>