@model ShoppingCart.ViewModels.CategoriesViewModel
@{
    ViewBag.Title = "Categories Page";
}

<div class="row">
    <div class="col-md-4">
        <ul> Categories
        @foreach (var c in Model.Categories)
        {
            <li>
                <div>
                    <h3>@c.Name</h3>
                </div>
            </li>
        }
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        @if (Model.SelectedCategories.Count() != 0 && Model.Categories.Count() != 0)
        {
            foreach (var p in Model.SelectedCategories.First().Products)
             {
                 <div>
                     <h3>@p.Name</h3>
                     <p>@p.Price</p>
                 </div>
             }
        }
        else if (Model.SelectedCategories.Count() == 0 && Model.Categories.First().Products.Count() != 0)
        {
            foreach (var p in Model.Categories.First().Products)
            {
                <div>
                    <h3>@p.Name</h3>
                    <p>@p.Price</p>
                </div>
            }
        }
        else
        {
            <div>There is no category/Product yet. Pease contact the administrator to ad new categories/Products</div>
        }
    </div>
</div>
