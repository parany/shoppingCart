@model ShoppingCart.Models.Models.Entities.Product
@{
    ViewBag.Title = "Details";
}

<h2 style="color:darkcyan;">Details of @Model.Name</h2>

<div class="row">
    <div class="text-center col-md-6 col-lg-6">
        <img style="width:390px;margin-bottom:50px;" src="http://localhost:12862/Uploads/images/@Model.Image.getImageVersion("_large")" alt="@Model.Image.ImageName">
    </div>

    <ul class="list-group col-md-6 col-lg-6" style="margin-top: 50px;">
        <li class="list-group-item list-group-item-info"><strong>Description:</strong><br />@Model.Description</li>
        <li class="list-group-item list-group-item-warning"><span class="badge">@Model.Category.Name</span>Category:<br /></li>
        <li class="list-group-item list-group-item-danger"><span class="badge">@Model.Price.ToString("c")</span>Selling Price:</li>
        <li class="list-group-item list-group-item-success"><span class="badge">@Model.Quantity</span>Number available in stock:</li>
    </ul>
</div>

<div>
    <a href="@ViewData["ReturnUrl"]"> < Back to List</a>
</div>

