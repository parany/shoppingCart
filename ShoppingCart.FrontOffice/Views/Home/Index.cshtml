@using ShoppingCart.Models
@model ShoppingCart.ViewModels.ProductsListViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>The e-commerce shopping web site</h2>
    <p class="lead">
        Have a look at your last products ...
    </p>

</div>

<div class="row">
    <div class="col-md-4">
        @foreach (var p in Model.Products)
        {
            <div class="well">
                <h3>
                    <strong>@p.Name</strong>
                    <span class="pull-right label label-primary">@p.Price.ToString("c")</span>
                </h3>
                <span class="lead"> @p.Description</span>
            </div>
        }
    </div>
</div>
<div class="btn-group pull-right">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", new { page = x }))
</div>